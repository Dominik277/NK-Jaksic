<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/jaksic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Natjecanje: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailRasporedNatjecanje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Datum: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailRasporedDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Domacin: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailRasporedDomacin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Gost: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailRasporedGost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Vrijeme: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailRasporedVrijeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/detailRasporedClanak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Detail Raspored"
        android:textColor="#000"
        android:textSize="20dp" />

</LinearLayout>