<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/updateVijestiNaslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ovdje unesite naslov"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/updateVijestiClanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ovdje unesite članak"
        android:layout_weight="1"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gumbUpdateVijesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Ažuriraj" />

        <Button
            android:id="@+id/gumbDeleteVijesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Obriši" />
    </LinearLayout>
</LinearLayout>