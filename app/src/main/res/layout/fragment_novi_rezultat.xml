<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/noviRezultatNatjecanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite natjecanje" />

    <EditText
        android:id="@+id/noviRezultatDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite datum" />

    <EditText
        android:id="@+id/noviRezultatDomacin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite domaÄ‡ina" />

    <EditText
        android:id="@+id/noviRezultatGost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite gosta" />

    <EditText
        android:id="@+id/noviRezultatRezultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite rezultat utakmice" />
    <EditText
        android:id="@+id/noviRezultatIshod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite ishod utakmice" />
    <EditText
        android:id="@+id/noviRezultatPostave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite postave" />
    <EditText
        android:id="@+id/noviRezultatDetalji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite detalje" />
    <EditText
        android:id="@+id/noviRezultatClanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ovdje unesite clanak" />

    <Button
        android:id="@+id/gumbSpremiNoviRezultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Spremi" />

</LinearLayout>
</ScrollView>