<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/noviRezultatNatjecanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="Ovdje unesite natjecanje" />

    <EditText
        android:id="@+id/noviRezultatDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite datum"
        android:inputType="number" />

    <EditText
        android:id="@+id/noviRezultatDomacin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite domaÄ‡ina" />

    <EditText
        android:id="@+id/noviRezultatGost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite gosta" />

    <EditText
        android:id="@+id/noviRezultatRezultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite rezultat utakmice" />
    <EditText
        android:id="@+id/noviRezultatIshod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite ishod utakmice" />

    <Button
        android:id="@+id/gumbSpremiNoviRezultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:text="Spremi" />

</LinearLayout>