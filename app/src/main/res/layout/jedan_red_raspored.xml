<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/jedanRedRaspored">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSiva">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NATJECANJE: "
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/rasporedNatjecanje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIGA"
            android:textSize="22dp"
            android:textColor="#000"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/rasporedDatum"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="21.09"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/rasporedDomacin"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="NK Jakšić"
                android:textSize="19dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/rasporedGost"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="NK Kuzmica"
                android:textColor="#000"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/rasporedVrijeme"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="15:30"
                android:textSize="19dp"
                android:textColor="#000"/>

    </LinearLayout>

</LinearLayout>