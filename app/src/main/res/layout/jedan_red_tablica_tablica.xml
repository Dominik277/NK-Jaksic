<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tablica_tablica_pozicija"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textColor="#000"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/tablica_tablica_ime"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="NK Jakšić"
        android:textColor="#000"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/tablica_tablica_susreti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="22"
        android:textColor="#000"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/tablica_tablica_golovi"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_marginLeft="10dp"
        android:text="54:24"
        android:textColor="#000"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/tablica_tablica_bodovi"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="50"
        android:textColor="#000"
        android:textSize="22dp"/>

</LinearLayout>