<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <EditText
        android:id="@+id/updateRezultatNatjecanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ime natjecanja"/>
    <EditText
        android:id="@+id/updateRezultatDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datum"/>
    <EditText
        android:id="@+id/updateRezultatDomacin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Domacin"/>
    <EditText
        android:id="@+id/updateRezultatGost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gost"/>
    <EditText
        android:id="@+id/updateRezultatRezultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rezultat"/>
    <EditText
        android:id="@+id/updateRezultatIshod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ishod"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gumbRezultatUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/gumbDeleteRezultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="Delete"/>

    </LinearLayout>

</LinearLayout>