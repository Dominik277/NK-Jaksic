<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/noviRasporedNatjecanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Ovdje unesite natjecanje" />

    <EditText
        android:id="@+id/noviRasporedDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite datum"/>

    <EditText
        android:id="@+id/noviRasporedDomacin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite domaÄ‡ina" />

    <EditText
        android:id="@+id/noviRasporedGost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite gosta" />

    <EditText
        android:id="@+id/noviRasporedVrijeme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite vrijeme igranja" />
    <EditText
        android:id="@+id/noviRasporedClanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Ovdje unesite clanak" />

    <Button
        android:id="@+id/gumbSpremiNoviRaspored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Spremi" />

</LinearLayout>