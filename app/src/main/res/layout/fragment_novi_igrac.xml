<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">


    <EditText
        android:id="@+id/noviIgracIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Ovdje upišite ime igrača" />

    <EditText
        android:id="@+id/noviIgracPrezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Ovdje upišite prezime igrača" />

    <EditText
        android:id="@+id/noviIgracBroj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Ovdje upišite broj igrača"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imageViewIgrac"
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gumbIgracGalerija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Galerija" />

        <Button
            android:id="@+id/gumbIgracUslikaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Uslikaj" />

        <Button
            android:id="@+id/gumbSpremiNoviIgrac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Spremi" />

    </LinearLayout>

</LinearLayout>