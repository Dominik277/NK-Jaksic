        <Button
            android:id="@+id/gumbSpremiTablicaRezultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Spremi" />

    </LinearLayout>
</ScrollView>