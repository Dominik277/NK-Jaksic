            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Gost" />

        <EditText
            android:id="@+id/noviRezultatLigaPrviRezultat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Rezultat"
            android:textSize="17dp"/>
    </LinearLayout>


