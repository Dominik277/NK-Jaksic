                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Datum" />

            <EditText
                android:id="@+id/noviRezultatLigaPrviDomacin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Domacin" />

            <EditText
                android:id="@+id/noviRezultatLigaPrviGost"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Gost" />

            <EditText
                android:id="@+id/noviRezultatLigaPrviRezultat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Rezultat"
                android:textSize="17dp" />
        </LinearLayout>
        </HorizontalScrollView>


