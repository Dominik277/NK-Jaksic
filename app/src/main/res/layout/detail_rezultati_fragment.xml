<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/jaksic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natjecanje: " />

        <TextView
            android:id="@+id/detailRezultatNatjecanje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum: " />

        <TextView
            android:id="@+id/detailRezultatDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domacin: " />

        <TextView
            android:id="@+id/detailRezultatDomacin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Raspored" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gost: "/>
    <TextView
        android:id="@+id/detailRezultatGost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Raspored" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rezultat: "/>
    <TextView
        android:id="@+id/detailRezultatRezultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Raspored" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ishod: "/>
    <TextView
        android:id="@+id/detailRezultatIshod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Raspored" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/detailRezultatClanak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Raspored" />

</LinearLayout>