<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/updateStrijelciPozicija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pozicija"/>

    <EditText
        android:id="@+id/updateStrijelciImePrezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ime i prezime"/>

    <EditText
        android:id="@+id/updateStrijeciBrojGolova"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Broj golova"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/gumbStrijelciUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />

        <Button
            android:id="@+id/gumbStrijelciDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout>
