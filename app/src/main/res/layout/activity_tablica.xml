<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.aktivnosti.TablicaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTablica"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary"/>

    <LinearLayout
        android:id="@+id/linearLayoutTablica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/toolbarTablica">

        <Button
            android:id="@+id/gumbTablica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tablica"
            android:layout_margin="2.5dp"/>
        <Button
            android:id="@+id/gumbNajboljiStrijelci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Najbolji strijelci"
            android:layout_margin="2.5dp"/>
        <Button
            android:id="@+id/gumbRezultati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rezultati"
            android:layout_margin="2.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPokaznaTraka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayoutTablica">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIM"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OS"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="115dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOD"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTablica"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutPokaznaTraka"/>

</RelativeLayout>