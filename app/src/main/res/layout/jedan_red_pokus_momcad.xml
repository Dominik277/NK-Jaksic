<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/brojIgracaPokus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="5"
            android:textColor="#000"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/imeIgracaPokus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brojIgracaPokus"
            android:layout_marginLeft="20dp"
            android:text="Domagoj"
            android:textColor="#000"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/prezimeIgracaPokus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imeIgracaPokus"
            android:layout_marginLeft="20dp"
            android:text="Kovačević"
            android:textColor="#000"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/face"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>